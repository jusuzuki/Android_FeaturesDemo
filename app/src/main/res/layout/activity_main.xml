<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND NAG"
        android:id="@+id/sendButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="sendNag"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND EVENT"
        android:id="@+id/sendEventButton"
        android:layout_below="@+id/sendButton"
        android:layout_centerHorizontal="true"
        android:onClick="sendEvent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND E-MAIL"
        android:id="@+id/sendEmailButton"
        android:layout_above="@+id/sendButton"
        android:layout_centerHorizontal="true"
        android:onClick="sendEmail"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call me maybe"
        android:id="@+id/callButton"
        android:layout_above="@+id/sendEmailButton"
        android:layout_centerHorizontal="true"
        android:onClick="call"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAP"
        android:id="@+id/mapButton"
        android:layout_above="@+id/callButton"
        android:layout_centerHorizontal="true"
        android:onClick="map"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bad Direction"
        android:id="@+id/badDirectionButton"
        android:layout_above="@+id/mapButton"
        android:layout_centerHorizontal="true"
        android:onClick="badDirection"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Picture. Smile!"
        android:id="@+id/pictureButton"
        android:layout_below="@+id/sendEventButton"
        android:layout_centerHorizontal="true"
        android:onClick="takePhoto"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/photo"
        android:layout_below="@+id/pictureButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>
</RelativeLayout>
